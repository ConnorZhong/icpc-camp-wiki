#include <bits/stdc++.h>
using namespace std;
const int MOD = 1e9 + 7;
int mpow(int x, int n) {
	int res = 1;
	while (n) {
		if (n & 1) res = 1LL * res * x % MOD;
		x = 1LL * x * x % MOD;
		n >>= 1;
	}
	return res;
}
class ExpectedMinimumPower {
	public:
	int findExp(int n, int x) {
		int tmp = 1, res = 0;
		for (int i = 0; i < x; ++ i) {
			res = (res + tmp) % MOD;
			tmp = 1LL * tmp * (n - i) % MOD * mpow(i + 1, MOD - 2) % MOD;
		}
		return (mpow(2, n) + MOD - res) % MOD * 2 % MOD;
	}
};
