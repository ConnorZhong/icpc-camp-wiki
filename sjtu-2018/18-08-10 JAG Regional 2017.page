用set维护正反两个方向的费用

~~~ {.cpp}
#include<bits/stdc++.h>
using namespace std;

typedef long long ll;
const int maxn=200010;
ll a[maxn],b[maxn];
ll ans,n;
ll sum;
multiset<ll> from,to;
int main()
{
	scanf("%lld",&n);
	for (int i=1;i<n;i++)
		scanf("%lld",&a[i]);
	for (int i=1;i<=n;i++)
		scanf("%lld",&b[i]);
	for (int i=1;i<=n;i++)
	{
		ans+=b[i];
		int op=0;
		if (!from.empty())
		{
			ll t=*from.begin();
			if (t-b[i]+sum<0)
			{
				ans+=t-b[i]+sum;
				from.erase(from.begin());
				to.insert((-(t+sum))-sum);
				op=1;
			}
		}
		if (!to.empty())
		{
			ll t=*to.begin();
			if (t+b[i]+sum<0)
			{
				ans+=t+b[i]+sum;
				to.erase(to.begin());
				from.insert((-(t+sum))-sum);
				op=-1;
			}
		}
		if (op==0)
		{
			from.insert(b[i]-sum);
			to.insert(-b[i]-sum);
		}
		if (op==1)
		{
			from.insert(b[i]-sum);
			from.insert(b[i]-sum);
		}
		if (op==-1)
		{
			to.insert(-b[i]-sum);
			to.insert(-b[i]-sum);
		}
		sum+=a[i];
	}
	printf("%lld\n",ans);
	return 0;
}
